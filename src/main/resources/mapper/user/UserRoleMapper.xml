<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bryan.platform.mapper.user.UserRoleMapper">

    <resultMap id="BaseResultMap" type="com.bryan.system.domain.entity.user.UserRole">
        <id column="id" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="is_default" property="isDefault"/>
    </resultMap>

    <select id="selectOneByIsDefaultTrue" resultMap="BaseResultMap">
        SELECT id, role_name, is_default
        FROM user_role
        WHERE is_default = TRUE
        AND deleted = 0
        LIMIT 1
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT id, role_name, is_default
        FROM user_role
        WHERE deleted = 0
    </select>

    <select id="selectByIdList" resultMap="BaseResultMap">
        SELECT id, role_name, is_default
        FROM user_role
        WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
        AND deleted = 0
    </select>
</mapper>